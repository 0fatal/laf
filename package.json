{
  "name": "laf-project",
  "description": "laf serverless cloud development platform",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Maslow/laf.git"
  },
  "scripts": {
    "install": "lerna exec npm install --parallel",
    "install-dev": "lerna bootstrap",
    "build": "lerna run build --parallel",
    "watch": "lerna run watch --parallel",
    "prepublishOnly": "npm run build",
    "changelog": "npx conventional-changelog -i CHANGELOG.md -s -r 0 -p angular",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "docs:deploy": "npm run docs:build && sh ./scripts/deploy-docs.sh",
    "docker-build-system-server": "node ./scripts/docker-build-system-server.js",
    "docker-build-app-service": "node ./scripts/docker-build-app-service.js",
    "docker-build-system-client": "node ./scripts/docker-build-system-client.js",
    "docker-build": "npm run docker-build-system-server && npm run docker-build-app-service && npm run docker-build-system-client",
    "docker-push-app-service": "node ./scripts/docker-push-app-service.js",
    "docker-push-system-server": "node ./scripts/docker-push-system-server.js",
    "docker-push-system-client": "node ./scripts/docker-push-system-client.js",
    "docker-push": "npm run docker-push-app-service && npm run docker-push-system-server && npm run docker-push-system-client",
    "clean:build": "rm -rf ./packages/*/dist",
    "stats": "find ./packages -name '*.ts' | xargs cat | grep -v ^$| wc -l"
  },
  "keywords": [
    "BaaS",
    "cloud",
    "mysql",
    "acl",
    "serverless",
    "less-api"
  ],
  "devDependencies": {
    "conventional-changelog-cli": "^2.1.1",
    "fs-extra": "^9.1.0",
    "husky": "^5.2.0",
    "lerna": "^4.0.0",
    "vitepress": "^0.16.1"
  }
}
