{
  "name": "less-framework-root",
  "description": "less framework base on less-api",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Maslow/less-framework.git"
  },
  "scripts": {
    "install": "lerna exec npm install",
    "install-dev": "lerna bootstrap",
    "start": "lerna run start",
    "build": "lerna run build",
    "watch": "lerna run watch --parallel",
    "prepublishOnly": "npm run build",
    "changelog": "npx conventional-changelog -i CHANGELOG.md -s -r 0 -p angular",
    "docker-build-devops-server": "node ./scripts/docker-build-devops-server.js",
    "docker-build-app-server": "node ./scripts/docker-build-app-server.js",
    "docker-build-devops-admin": "node ./scripts/docker-build-devops-admin.js",
    "docker-build": "npm run docker-build-devops-server && npm run docker-build-app-server && npm run docker-build-devops-admin",
    "docker-push-app-server": "node ./scripts/docker-push-app-server.js",
    "docker-push-devops-server": "node ./scripts/docker-push-devops-server.js",
    "docker-push-devops-admin": "node ./scripts/docker-push-devops-admin.js",
    "docker-push": "npm run docker-push-app-server && npm run docker-push-devops-server && npm run docker-push-devops-admin"
  },
  "keywords": [
    "BaaS",
    "cloud",
    "mysql",
    "acl",
    "serverless",
    "less-api"
  ],
  "devDependencies": {
    "conventional-changelog-cli": "^2.1.1",
    "fs-extra": "^9.1.0",
    "husky": "^5.2.0",
    "lerna": "^4.0.0"
  }
}
